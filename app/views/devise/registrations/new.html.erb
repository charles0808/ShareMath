
<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %> 
      <h2>Sign up</h2>
      <fieldset class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, :class => "form-control",:placeholder => "Enter Your Email" %>
      </fieldset>

      <fieldset class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", :placeholder => "Enter Your Password", :class => "form-control" %>
      </fieldset>

      <fieldset class="form-group">
          <%= f.label :password_confirmation%><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" ,:placeholder => "Enter Your Password again"%>
      </fieldset>

      <fieldset class="form-group">
          <%= f.submit "Sign up", :class => "btn btn-lg btn-primary"%>
      </fieldset>

  <% end %>
</div>
